<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="edu.neumont.hellraisers.javabullethell.ui.MainMenuView"
	stylesheets="MenuStyle.css">
	<center>
		<VBox alignment="center" spacing = "50">
			<Label styleClass="title">Java Bullet Hell</Label>
			<VBox alignment="center">
				<Button styleClass="btn" onAction="#onPlay">Play</Button>
				<Button styleClass="btn" onAction="#onOption">Options</Button>
				<Button styleClass="btn" onAction="#onAbout">About</Button>
				<Button styleClass="btn" onAction="#onQuit">Quit</Button>
			</VBox>
		</VBox>
	</center>
</BorderPane>

